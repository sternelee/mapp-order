/* pages/list/list.wxss */
.page{
  overflow-y:hidden;
}
.list-left-menu{
  width:160px;
  font-size:26px;
  position: absolute;
  left:0px;
  z-index: 10;
  height: 100%;
  background: #f9f9f9;
}
.list-left-menu-box-unselect{
  padding:10px;
  border-bottom:1px solid #E3E3E3;
  height:72px;
  color: #6C6C6C;
  background:#F9F9F9;
}
.list-left-menu-box-selected{
  padding:10px;
  height:72px;
  color: #E53085;
  border-left:3px solid #E53085;
  background:white;
}

.list-tab{
  margin-left:160px;
  font-size:25px;
  color:#CBCCCF;
  padding:2px;
  text-indent: 30px;
  margin-top: 20px;
}
.list-menu-name{
  text-align: center;
  margin-top:14px;
}
.list-image-box{
  width:180px;
  height:180px;
  text-align: center;
}
.content-list{
  margin-left:160px;
  display:flex;
  border-bottom: 1px solid #E3E3E3;
}
.list-image{
  width:108px;
  height: 100%;
  margin-top:16px;
}
.issue-name{
  flex: 1;
  font-size:30px;
  margin-top:20px;
  padding-right: 20px;
}
.food-desc {
  font-size: 18px;
  color: #c6c9cb;
  margin-top: 8px;
}
.food-edit {
  margin-top:10px;
  color:#F05A86
}
.plus-icon{
  float:right;
  color:#E53085;
  font-size:46px;
}
.operate-bar{
  z-index: 1001; 
  position: absolute;
  bottom: 0px;
  height:110px;
  width:100%;
  display: flex;
}
.gouwuche{
  width:75%;
  background:#353535;
  height: 100%; 
  display: flex;
  padding-left: 30px;
  align-items: center;
}
.gouwuche-icon{
  background: #66676b;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: -40px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.number-msg{
  border-radius:50%;
  background:white;
  color:red;
  font-size:26px;
  position: absolute;
  text-align: center;
  top: 5px;
  right:5px;
  width: 30px;
  height: 30px;
  line-height: 30px;
  display: block;
}

.gouwuche-price{
  color:#A9A9A9;
  display:flex;
  align-items: center;
  margin-left:10px;
  font-size:20px
}
.submit-btn{
  height:100%;
  background:#F7F7F7;
  width:25%;
  display:flex;
}
.submit-btn-label{
  color:#A9A9A9;
  font-size:30px;
  margin:auto;
}

.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
.drawer_box_ad { 
  margin-left: 7%; 
  width: 86%; 
  overflow: hidden;  
  position: fixed;  
  top: 15%; 
  z-index: 1001;  
  background: #FFFFFF;  
  border-radius: 4px;
} 
.cartlist-float{  
  width: 100%; 
  overflow: hidden;  
  position: fixed;   
  z-index: 1001;
  bottom: 110px;
  max-height: 290px;  
} 


.drawer_content_ad {  
  height: 460px;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
}

.select-line-nav{
  font-size:24px;
  margin-left:5px;
  margin-top:10px;
  color:#ABABAB;
}

.select-tab{
  padding:5px 7px;
  border:1px solid #ABABAB;
  font-size:20px;
  border-radius:5px;
  margin:5px;
  color:#ABABAB;
  z-index:1002;
}
.select-active{
  color:#E53085;
  border:1px solid #E53085;
}
.select-price{
  font-size:30px;
  color:#E53085;
  margin-top:20px;
  display:flex;
  align-items: center;
  margin-left:10px;
}
.btn-putIn{
  height:50px;
  width:160px;
  font-size:20px;
  background:#E53085;
  color:white;
  margin-right:20px;
}


.activity-color{
  color:#E53085;
}
.color-white{
  color:white;
}
.activity-color-bg{
  background:#E53085;
}

.label-cart-bar{
  color:#878787;
  font-size:12px;
  border-left:4px solid #E53085;
  margin-left: 20px;
}
.icon-clear{
    color:#878787;
    float: right;
    margin-right: 10px;
}
.label-clear{
    color:#878787;
    font-size: 12px;
}
.cart-list-box{
  background:#FFFFFF;
  display:flex;
  font-size:13px;
}
.list-info{
  width:50%;
  padding:5px 15px;
}
.list-info-size{
  font-size:10px;
  color:#B1B1B1;
}
.icon-li-circle{
  margin-left:15px;
  font-size:20px
}
.font20{
  font-size:20px
}
.cart-scroll-list{
  height:450px;
}
.cut-bar{
  height:20px; 
  position: fixed;
  bottom:55px;
  background:#E53085;
  width:100%;
  color:#FFF7EC;
  font-size:12px;
  text-align:center;
}